{
  "name": "@taxi-line/functions",
  "version": "0.0.1",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && npx firebase-tools emulators:start --only functions",
    "emulators": "npm run build && npx firebase-tools emulators:start",
    "emulators:all": "npm run build && npx firebase-tools emulators:start --import=./emulator-data --export-on-exit",
    "shell": "npm run build && npx firebase-tools functions:shell",
    "start": "npm run shell",
    "deploy": "npx firebase-tools deploy --only functions",
    "logs": "npx firebase-tools functions:log",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@taxi-line/shared": "workspace:*",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "typescript": "^5.3.3"
  }
}
