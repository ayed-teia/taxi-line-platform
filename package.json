{
  "name": "taxi-line-platform",
  "version": "0.0.1",
  "private": true,
  "description": "Smart taxi line system for West Bank cities",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx --cache",
    "lint:fix": "eslint . --ext .ts,.tsx --cache --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm -r run typecheck",
    "emulators": "npx firebase-tools emulators:start",
    "emulators:persist": "npx firebase-tools emulators:start --import=./emulator-data --export-on-exit=./emulator-data",
    "build:functions": "pnpm --filter @taxi-line/functions build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
